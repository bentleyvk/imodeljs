{
  "$id": "test schema",
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "test1 settings",
  "description": "the settings for test application 1",
  "type": "object",
  "groupName": "group1",
  "order": 7,
  "properties": {
    "group1.list.multiSelectModifier": {
      "type": "string",
      "enum": [
        "ctrlCmd",
        "alt"
      ],
      "enumDescriptions": [
        "ctrl cmd macOS.",
        "alt cmd on Windows."
      ],
      "default": "ctrlCmd",
      "description": "multiSelectModifier"
    },
    "group1.list.openMode": {
      "type": "string",
      "enum": [
        "singleClick",
        "doubleClick"
      ],
      "default": "singleClick",
      "description": "openModeModifier"
    },
    "group1.list.horizontalScrolling": {
      "type": "boolean",
      "default": false,
      "description": "horizontalScrolling setting"
    },
    "group1.tree.indent": {
      "type": "number",
      "default": 8,
      "minimum": 0,
      "maximum": 40,
      "description": "tree indent setting"
    },
    "group1.tree.blah": {
      "type": "string",
      "default": "blah default",
      "description": "the setting for blah"
    }
  }
}